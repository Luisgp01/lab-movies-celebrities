<h2>{{movie.title}}</h2>
<p>Genre: {{movie.genre}}</p>
<p>Plot: {{movie.plot}}</p>
{{#if movie.cast}}
<p>Cast:</p>
<ul>
    {{#each movie.cast as | celebrity}}
    <li><a href="../celebrities/{{celebrity._id}}"></a></li>
    {{/each}}
</ul>
{{/if}}
<button onclick="window.location.href=`/movies/{{movies._id}}/edit`">Edit Movie</button>
<form action="/movies/{{movies._id}}/delete" method="post">
<button type="submit">Delete Movie</button>
</form>